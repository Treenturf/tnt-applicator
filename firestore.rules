rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - only authenticated users can read their own data
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // Consider restricting this to admin role only
    }
    
    // Products - authenticated users can read, only admins should write
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated(); // TODO: Add admin role check
    }
    
    // Activity logs - authenticated users can read/write
    match /activityLogs/{logId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Applications - authenticated users can read/write
    match /applications/{applicationId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Kiosks - authenticated users can read/write
    match /kiosks/{kioskId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}