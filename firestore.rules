rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // For custom authentication system (4-digit codes)
    // Allow read access to users collection for login verification
    match /users/{userId} {
      allow read: if true; // Allow reading for login verification
      allow write: if true; // Allow writes for admin functionality
    }
    
    // Allow read access to products for all users
    match /products/{productId} {
      allow read: if true;
      allow write: if true; // Allow writes for product management
    }
    
    // Allow activity logging
    match /activityLogs/{logId} {
      allow read, write: if true;
    }
    
    // Allow applications data
    match /applications/{applicationId} {
      allow read, write: if true;
    }
    
    // Allow kiosks data
    match /kiosks/{kioskId} {
      allow read, write: if true;
    }
  }
}